<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>
<?import javafx.collections.FXCollections?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Header bar -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #0099cc;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 20;" text="SOUNDLINK" />
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Home" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Discover" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Create" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Communities" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Events" />
            </children>
        </HBox>

        <!-- Main content for event creation form -->
        <VBox alignment="CENTER" layoutX="100.0" layoutY="100.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;">
            <children>
                <!-- Title -->
                <Label style="-fx-text-fill: #2f4f2f; -fx-font-size: 28px; -fx-font-weight: bold;" text="Create a Community" />

                <!-- Community Name -->
                <VBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                    <Label style="-fx-font-size: 16px;" text="Community Name" />
                    <TextField maxWidth="-Infinity" prefHeight="30.0" prefWidth="300.0" promptText="Enter community name" />
                </VBox>

                <!-- Genre Input -->
                <VBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                    <Label text="Select Genre" style="-fx-font-size: 16px;" />
                    <ComboBox prefWidth="150.0" promptText="Select Genre">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Rock" />
                                <String fx:value="Jazz" />
                                <String fx:value="Hip-Hop" />
                                <String fx:value="Electronic" />
                                <String fx:value="Classical" />
                                <String fx:value="Indie" />
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <!-- Description -->
                <VBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                    <Label style="-fx-font-size: 16px;" text="Description" />
                    <TextArea prefHeight="100.0" prefWidth="600.0" promptText="Describe your community..." />
                </VBox>

                <!-- Create Community Button -->
                <Button prefWidth="600.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px;" text="Create Community" />
            </children>
        </VBox>
    </children>
</AnchorPane>
