<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefWidth="500.0" spacing="20.0"
      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hub.troubleshooters.soundlink.app.areas.communities.CommunityAdminController">

    <!-- Banner Image -->
    <ImageView fx:id="bannerImageView" pickOnBounds="true" preserveRatio="true">
        <viewport>
            <Rectangle2D height="200.0" width="500.0" />
        </viewport>
    </ImageView>

    <!-- Editable Event Name -->
    <HBox spacing="10.0">
        <Label text="Community Name:" />
        <TextField fx:id="nameTextField" promptText="Enter community name" />
    </HBox>

    <!-- Editable Event Description -->
    <VBox spacing="10.0">
        <Label text="Description:" />
        <TextArea fx:id="descriptionTextArea" promptText="Enter community description" />
    </VBox>

    <!-- Editable Genre Name -->
    <HBox spacing="10.0">
        <Label text="Genre:" />
        <TextField fx:id="genreTextField" promptText="Enter genre" />
    </HBox>

    <!-- Save Changes Button -->
    <HBox spacing="10.0">
        <Button fx:id="saveButton" text="Save Changes" onAction="#onSaveChangesClick" />
    </HBox>

    <!-- Delete Event Button (To Be Determined) -->
    <HBox spacing="10.0">
        <Button fx:id="deleteButton" text="Delete Event" onAction="#onDeleteEventClick" />
    </HBox>

</VBox>
