<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="500.0" spacing="20.0"
      style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;"
      xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="hub.troubleshooters.soundlink.app.areas.communities.CommunityDetailsController">

    <!-- Banner Image -->
    <ImageView fx:id="bannerImageView" pickOnBounds="true" preserveRatio="true">
        <viewport>
            <Rectangle2D height="200.0" width="500.0" />
        </viewport>
    </ImageView>

    <!-- Event Name -->
    <Label fx:id="nameLabel" styleClass="h1" />

    <!-- Genre Name -->
    <Label fx:id="genreLabel" styleClass="h1" style="-fx-font-size: 14px;" />

    <!-- Event Description -->
    <TextArea fx:id="descriptionTextArea" editable="false" />

    <!-- Sign Up and Cancel Buttons -->
    <HBox spacing="10.0">
        <children>
            <Button fx:id="signUpButton" mnemonicParsing="false" onAction="#onBookButtonClick" text="Sign Up">
                <styleClass>
                    <String fx:value="btn" />
                    <String fx:value="btn-primary" />
                </styleClass>
            </Button>
            <Button fx:id="cancelBookingButton" mnemonicParsing="false" onAction="#onCancelButtonClick" text="Cancel Booking">
                <styleClass>
                    <String fx:value="btn" />
                    <String fx:value="btn-secondary" />
                </styleClass>
            </Button>
        </children>
    </HBox>
</VBox>
