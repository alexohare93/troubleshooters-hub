<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Search Section (Advanced Filters) -->
        <HBox layoutX="20.0" layoutY="100.0" spacing="30.0">
            <!-- Filters Sidebar -->
            <VBox prefWidth="250.0" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-color: lightgray; -fx-border-width: 1px; -fx-border-radius: 5px;">
                <Label text="Advanced Search" style="-fx-text-fill: #fa8072; -fx-font-size: 18px; -fx-font-weight: bold;" />
                <Label text="Event Type:" style="-fx-padding: 10 0 0 0;" />
                <ComboBox prefWidth="200.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Concert" />
                            <String fx:value="Festival" />
                            <String fx:value="Workshop" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Location:" style="-fx-padding: 10 0 0 0;" />
                <ComboBox prefWidth="200.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="New York" />
                            <String fx:value="Los Angeles" />
                            <String fx:value="Chicago" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Date:" style="-fx-padding: 10 0 0 0;" />
                <DatePicker prefWidth="200.0" />

                <!-- Search button moved down using VBox.setMargin() -->
                <Button text="Search" style="-fx-background-color: #ffcc00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>

            <!-- Event Results List -->
            <VBox spacing="20.0">
                <!-- Event Item Card -->
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="450.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 1px; -fx-padding: 10;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #fa8072;" text="Summer Music Festival" />
                    <Label text="Location: New York" />
                    <Label text="Date: August 15, 2024" />
                    <Label text="" />
                    <Button text="Sign Up " style="-fx-background-color: #ffcc00; -fx-text-fill: white;" />
                </VBox>

                <!-- Additional Event Cards -->
                <VBox alignment="CENTER" prefHeight="100.0" prefWidth="450.0" style="-fx-background-color: white; -fx-border-color: lightgray; -fx-border-width: 1px; -fx-padding: 10;">
                    <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #fa8072;" text="Jazz Night" />
                    <Label text="Location: Chicago" />
                    <Label text="Date: September 20, 2024" />
                    <Label text="" />
                    <Button text="Sign Up" style="-fx-background-color: #ffcc00; -fx-text-fill: white;" />
                </VBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
