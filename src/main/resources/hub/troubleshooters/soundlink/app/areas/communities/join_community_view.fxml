<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <!-- Header bar with SoundLink title -->
        <HBox alignment="CENTER_LEFT" prefHeight="50.0" prefWidth="800.0" style="-fx-background-color: #fa8072;">
            <children>
                <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 0 0 0 20;" text="Sound Link" />
                <Region HBox.hgrow="ALWAYS" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Home" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Discover" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Communities" />
                <Button style="-fx-background-color: transparent; -fx-text-fill: white;" text="Events" />
            </children>
        </HBox>

        <!-- Main Content for Community Page -->
        <VBox alignment="CENTER" layoutX="100.0" layoutY="84.0" prefHeight="400.0" prefWidth="600.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;">
            
            <!-- Community Title -->
            <Label style="-fx-text-fill: #fa8072; -fx-font-size: 28px; -fx-font-weight: bold;" text="Rock Enthusiasts Community" />

            <!-- Community Description -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextFlow prefWidth="650">
                    <Text style="-fx-font-size: 16px; -fx-fill: gray;" text="This is a community for all rock music enthusiasts. Join us to share your experiences, attend rock events, and participate in discussions." />
                </TextFlow>
            </HBox>
            
            <!-- Community Stats or Additional Info -->
            <VBox alignment="CENTER_LEFT" prefWidth="600.0" spacing="10.0">
                <Label style="-fx-font-size: 16px;" text="Members: 320" />
                <Label style="-fx-font-size: 16px;" text="Discussions: 24 active discussions" />
                <Label style="-fx-font-size: 16px;" text="Upcoming Events: 3" />
            <!-- HBox for Checkbox and Guidelines TextFlow -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <TextFlow prefWidth="650">
                    <Text style="-fx-font-size: 16px; -fx-fill: gray;" text="Guidelines will promote respect, inclusivity, and cultural sensitivity. All users must follow these rules to create a welcoming and safe environment." />
                </TextFlow>
            </HBox>


                <!-- Checkbox for Agreement -->
                <CheckBox style="-fx-font-size: 14px;" text="I agree to the community guidelines" />
            </VBox>
 
            <!-- Join Community Button -->
            <Button prefWidth="600.0" style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px;" text="Join Community" />
        </VBox>
    </children>
</AnchorPane>
