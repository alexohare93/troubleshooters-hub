<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>


  <!-- Main content for event creation form -->
  <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: white; -fx-padding: 40; -fx-background-radius: 10; -fx-border-color: lightgray; -fx-border-radius: 10;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
      <children>
          <!-- Title -->
          <Label style="-fx-text-fill: #fa8072; -fx-font-size: 28px; -fx-font-weight: bold;" text="Create a New Event" />
          
                                  <!-- Event Name -->
          <VBox alignment="CENTER_LEFT" spacing="10.0">
              <Label style="-fx-font-size: 16px;" text="Event Name:" />
              <TextField promptText="Enter event name" style="-fx-background-color: white; -fx-border-color: lightgray;" />
          </VBox>

                            <!-- Date -->
          <VBox alignment="CENTER_LEFT" spacing="10.0">
              <Label style="-fx-font-size: 16px;" text="Date:" />
              <DatePicker promptText="dd/mm/yyyy" style="-fx-background-color: white; -fx-border-color: lightgray;" />
          </VBox>

                            <!-- Location -->
          <VBox alignment="CENTER_LEFT" spacing="10.0">
              <Label style="-fx-font-size: 16px;" text="Location:" />
              <TextField promptText="Enter location" style="-fx-background-color: white; -fx-border-color: lightgray;" />
          </VBox>

                            <!-- Description -->
          <VBox alignment="CENTER_LEFT" prefWidth="318.0" spacing="10.0">
              <Label style="-fx-font-size: 16px;" text="Description:" />
              <TextArea prefHeight="163.0" prefWidth="318.0" promptText="Enter event description" style="-fx-background-color: white; -fx-border-color: lightgray;" />
          </VBox>

                            <!-- Create Event Button -->
          <Button mnemonicParsing="false" style="-fx-background-color: #fa8072; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10 20;" text="Create Event" />
      </children>
  </VBox>
