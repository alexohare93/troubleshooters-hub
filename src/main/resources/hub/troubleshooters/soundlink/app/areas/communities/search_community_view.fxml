<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import java.lang.String?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hub.troubleshooters.soundlink.app.areas.event.CommunityBrowserController">
    <children>
        <!-- Search Section (Advanced Filters) -->
        <HBox layoutX="20.0" layoutY="100.0" spacing="30.0">
            <!-- Filters Sidebar -->
            <VBox prefWidth="250.0" style="-fx-background-color: white; -fx-padding: 20px; -fx-border-color: lightgray; -fx-border-width: 1px; -fx-border-radius: 5px;">
                <Label text="Find Your Community" style="-fx-text-fill: #fa8072; -fx-font-size: 18px; -fx-font-weight: bold;" />

                <Label text="Music Genre:" style="-fx-padding: 10 0 0 0;" />
                <ComboBox fx:id="genreComboBox" prefWidth="200.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Rock" />
                            <String fx:value="Jazz" />
                            <String fx:value="Classical" />
                            <String fx:value="Hip-Hop" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Location:" style="-fx-padding: 10 0 0 0;" />
                <ComboBox fx:id="locationComboBox" prefWidth="200.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="New York" />
                            <String fx:value="Los Angeles" />
                            <String fx:value="Chicago" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <Label text="Community Size:" style="-fx-padding: 10 0 0 0;" />
                <ComboBox prefWidth="200.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Small (&lt; 50 members)" />
                            <String fx:value="Medium (50-200 members)" />
                            <String fx:value="Large (&gt; 200 members)" />
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Search button -->
                <Button text="Search" style="-fx-background-color: #ffcc00; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10px;" onAction="#fetchCommunities">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>

            <!-- Community Results List -->
            <VBox fx:id="communityListVBox" spacing="20.0">
                <!-- Placeholder for dynamically loaded communities -->
            </VBox>
        </HBox>
    </children>
</AnchorPane>
